@model IEnumerable<E_Markett.Models.Category>

@{
    ViewBag.Title = "Index";
}

<style>
    .data {
        font-family: 'Times New Roman', Times, serif;
        font-size: larger;
        font-weight: bolder
    }

    .header-table {
        color: darkblue;
        font-size: x-large;
        font-family: 'Times New Roman', Times, serif
    }

    h1 {
        font-family: 'Aboriginebats One';
        font-weight: 900;
        color: midnightblue;
        text-align: center
    }
</style>

<h1>CATEGORY</h1>

<a href="@Url.Action("Create", "Categories")" target="_blank" class="btn btn-primary" style="text-align :center;margin-bottom:10px">
    <span class="glyphicon glyphicon-plus"></span>
    Create New Category
</a>
<table class="table">
    <tr class="header-table">
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.num_of_producta)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="data">
            <td style="font-size:large">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="font-size:large">
                @Html.DisplayFor(modelItem => item.num_of_producta)
            </td>
            <td>
                <a href="@Url.Action("Edit","Categories", new {  id = item.Id })" class="btn btn-success" target="_blank">
                    <span class="glyphicon glyphicon-ok"> Edit</span>
                </a>

                <br />

                <br />

                <a href="@Url.Action("Details","Categories", new { id = item.Id })" class="btn btn-default" target="_blank">
                    <span class="glyphicon glyphicon-bookmark"> Details</span>
                </a>

                <br />

                <br />

                <a href="@Url.Action("Delete","Categories", new { id = item.Id })" class="btn btn-danger" target="_blank">
                    <span class="glyphicon glyphicon-trash"> Delete</span>
                </a>
                <br />

                <br />

                <a href="@Url.Action("ViewProduct","Categories", new { id = item.Id })" class="btn btn-warning" target="_blank">
                    <span class="glyphicon glyphicon-camera"> View Products</span>
                </a>
            </td>
        </tr>
    }

</table>
