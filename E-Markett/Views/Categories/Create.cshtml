@model E_Markett.Models.Category

@{
    ViewBag.Title = "Create";
}

<h1 style="color:blue;text-align:center">Create New Category</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="color:blue;font-size:xx-large">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="color:blue">
            @Html.LabelFor(model => model.num_of_producta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.num_of_producta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.num_of_producta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:100px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<a href="@Url.Action("Index", "Categories")" class="btn btn-primary" style="text-align :center;margin-bottom:10px">
    <span class="glyphicon glyphicon-backward"></span>
    Back to List
</a>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
